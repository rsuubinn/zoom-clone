doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Zoom 
        main
            div#welcome
                div#rooms
                    h3 방 목록
                    ul
                form
                    input(placeholder="방 이름" type="text" required)
                    button 입장하기

            div#call
                div#myStream
                    video#myFace(autoplay,playsinline,width="200", height="200")
                    button#mute 음소거
                    button#camera 카메라 끄기
                    select#cameras
                    video#peerFace(autoplay,playsinline,width="200", height="200")
                div#chat
                    ul
                    form
                        input(placeholder="메세지를 입력하세요." type="text" required)
                        button 보내기
                button#exit 나가기

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 